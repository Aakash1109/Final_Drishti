        <activity android:name=".RegisterActivity" />
        <activity android:name=".PhoneBook" />
        <activity android:name=".PhoneCall" />

        <receiver android:name=".ScreenReceiver">
            <intent-filter>
                <action android:name="android.intent.action.USER_PRESENT" />
