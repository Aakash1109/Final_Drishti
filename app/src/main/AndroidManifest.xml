        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".CurrentDateTime" />
        <activity android:name=".LocationTracker" />
        <activity android:name=".GestureActivity" />
